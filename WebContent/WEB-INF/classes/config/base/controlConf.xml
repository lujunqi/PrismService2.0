<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
                        http://www.springframework.org/schema/aop   
                        http://www.springsource.org/schema/aop/spring-aop-3.0.xsd  
                        http://www.springframework.org/schema/tx  
                            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
	<bean name="m_unit" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="TEXT">
					<value><![CDATA[
<input type="text" name="${KEY}" data-exp='${VAL}' data-method="${TYPE}" id="${KEY}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end
 class="layui-input">
]]>
					</value>
				</entry>

				<entry key="RADIO">
					<value><![CDATA[
<div data-exp='${VAL}' data-method="${TYPE}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end
name="${KEY}"
>
#foreach($m in ${LIST}) 
<input type="radio" name="${KEY}" ${m.C} value="$m.K" title="$m.V">
#end
</div>
]]>
					</value>
				</entry>
				<entry key="SELECT">
					<value><![CDATA[
<select data-exp='${VAL}' name="${KEY}" id="${KEY}" data-method="${TYPE}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end

>
#foreach($m in ${LIST}) 
<option  ${m.C} value="$m.K">$m.V </option>
#end
</select>
]]>
					</value>
				</entry>
				<entry key="PASSWORD">
					<value><![CDATA[
<input type="password" name="${KEY}" id="${KEY}" class="layui-input">
]]>
					</value>
				</entry>

			</map>
		</constructor-arg>
	</bean>
</beans>