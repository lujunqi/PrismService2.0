<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
                        http://www.springframework.org/schema/aop   
                        http://www.springsource.org/schema/aop/spring-aop-3.0.xsd  
                        http://www.springframework.org/schema/tx  
                            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
	<bean name="m_unit" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="TEXT">
					<value><![CDATA[
<input type="text" name="${KEY}" data-exp='${VAL}' data-method="${TYPE}" id="${KEY}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end
 class="layui-input">
]]>
					</value>
				</entry>

				<entry key="RADIO">
					<value><![CDATA[
<div data-exp='${VAL}' data-method="${TYPE}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end
name="${KEY}"
>
#foreach($m in ${LIST}) 
<input type="radio" name="${KEY}" $!{m.C} value="$m.K" title="$m.V">
#end
</div>
]]>
					</value>
				</entry>
				<entry key="SELECT">
					<value><![CDATA[
<select data-exp='${VAL}' name="${KEY}" id="${KEY}" data-method="${TYPE}"
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end

>
#foreach($m in ${LIST}) 
<option  $!{m.C} value="$!m.K">$!m.V </option>
#end
</select>
]]>
					</value>
				</entry>
				<entry key="PASSWORD">
					<value><![CDATA[
<input type="password" name="${KEY}" id="${KEY}" class="layui-input">
]]>
					</value>
				</entry>
				<entry key="UPLOAD">
					<value><![CDATA[
<div id="${KEY}" data-upload-key="${KEY}" STYLE="width:300px;"></div>
<input type="hidden" id="INPUT_${KEY}" name="${KEY}">
<img id="IMG_${KEY}" width="50%" data-exp='${VAL}' data-method="attr" data-attr="src" >
<script>
upload($("#${KEY}"),$("#IMG_${KEY}"),$("#INPUT_${KEY}"));
</script>
]]>
					</value>
				</entry>
				<entry key="AREA">
					<value><![CDATA[
<input name="${KEY}" id="${KEY}"  type="text" class="city_input layui-input" data-exp='${VAL}' data-method="TEXT" readonly="readonly">

]]>
					</value>
				</entry>
				<entry key="HTML">
					<value><![CDATA[
<div style="display: block; padding: 9px 15px;color:#999; font-weight: 400;" data-exp='${VAL}'
#foreach($en in $OTHER.entrySet())
${en.key}="${en.value}" 
#end
>
</div>
]]>
					</value>
				</entry>
				<entry key="TEXTAREA">
					<value><![CDATA[
<textarea name="${KEY}" data-exp="${VAL}" data-method="TEXT" id="${KEY}" class="layui-textarea"></textarea>
]]>
					</value>
				</entry>

			</map>
		</constructor-arg>
	</bean>
</beans>